import mysql from 'mysql2/promise';

export async function connectToDatabase() {
  const conn = await mysql.createConnection({
    host: process.env.DB_4ufinder,
    user: process.env.DB_4ufinder@gmail.com,
    password: process.env.chiko,
    database: process.env.DB_4ufinder
  });
  return conn;
}
